<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:background="@color/colorAccent"
    android:elevation="50dp"
    android:layout_height="200dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:textSize="22sp"
            android:textStyle="bold"
            android:text="COMPLAINT - HUNTS POINT"
            android:background="@color/colorPostText"
            android:layout_height="30dp" />

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/complaint_type_textview"
            android:text="Noise - Residential"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
        <TextView
            android:id="@+id/description_textview"
            android:text="Loud Television"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
        <TextView
            android:id="@+id/resolution_description"
            android:text="Your complaint has been received by the Police Department and additional information will be available later."
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

</android.support.v7.widget.CardView>