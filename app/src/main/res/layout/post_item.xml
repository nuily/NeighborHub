<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_post_item"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="vertical"
    app:cardElevation="14dp"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:id="@+id/ll_post_card_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="11">

        <TextView
            android:id="@+id/tv_card_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:ellipsize="end"
            android:maxLines="1"
            android:gravity="center_vertical"
            android:paddingLeft="4dp"
            android:text="Title Here"
            android:textColor="@color/colorPostHeading"
            android:textSize="26dp" />

        <TextView
            android:id="@+id/tv_short_desc"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingLeft="4dp"
            android:text="Short Description Here (uses ellipse, 2 max lines). More text here. Blah blah blah lorem ipsum etcetera and more."
            android:textColor="@color/colorPostText"
            android:textSize="15dp" />

        <LinearLayout
            android:id="@+id/ll_post_card_footer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/tv_card_posted_by"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom|left"
                android:paddingBottom="4dp"
                android:paddingLeft="4dp"
                android:text="Posted By: Some User"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/tv_card_read_more"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom|right"
                android:paddingBottom="4dp"
                android:paddingRight="4dp"
                android:text="Read More..."
                android:textColor="@color/colorPrimary" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_number_pledged_card"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@color/colorPostText">

            <TextView
                android:id="@+id/tv_number_pledged_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="0 Neighbors have pledged support!"
                android:textColor="@color/colorTextLight" />

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>